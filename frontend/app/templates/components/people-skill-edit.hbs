<div class="row">
  <div class="col">
    <strong>{{peopleSkill.skill.title}}</strong>
  </div>
  <div class="col">
    <label class="description">Niveau</label>
    {{#power-select
    selected=peopleSkill.level
    options=interestLevelOptions
    searchEnabled=false
    onfocus=(action "handleFocus")
    onblur=(action "handleBlur")
    onchange=(action (mut peopleSkill.level))
    as |level|
    }}
      {{level}}
    {{/power-select}}
  </div>
  <div class="col">
    <label class="description">Interesse</label>
    {{#power-select
    selected=peopleSkill.interest
    options=interestLevelOptions
    searchEnabled=false
    onfocus=(action "handleFocus")
    onblur=(action "handleBlur")
    onchange=(action (mut peopleSkill.interest))
    as |interest|
    }}
      {{interest}}
    {{/power-select}}
  </div>
  <div class="col">
    {{input type="checkbox" id=(concat peopleSkill.id "-certificate") checked=peopleSkill.certificate}}
    <label class="description" for="{{concat peopleSkill.id "-certificate"}}">Zertifikat</label>
  </div>
  <div class="col">
    {{input type="checkbox" id=(concat peopleSkill.id "-coreCompetence") checked=peopleSkill.core_competence}}
    <label class="description" for="{{concat peopleSkill.id "-coreCompetence"}}">Kernkompetenz</label>
  </div>
</div>
<br>
