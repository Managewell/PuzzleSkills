<div class="mb-2">
  <div class="card-header bg-info" data-toggle="collapse" data-parent="#accordion" href="#collapseProject{{project.id}}">
    <div class="row">
      <div class="col-sm-6">
        <a class="card-link text-dark project-title-text">
          {{if project.monthFrom (concat (moment-format project.monthFrom 'MM' 'MM') '.')}}{{project.yearFrom}}
          {{#if (eq project.yearTo null)}}
            - heute
          {{else if (or (not-eq project.yearFrom project.yearTo) (not-eq project.monthFrom project.monthTo))}}
            - {{if project.monthTo (concat (moment-format project.monthTo 'MM' 'MM') '.')}}{{project.yearTo}}
          {{/if}}
          | {{project.title}}
        </a>
      </div>
      <div class="col-sm-6 text-right d-block">
        <a class="card-link text-dark" data-toggle="collapse" data-parent="#accordion" href="#collapseProject{{project.id}}"><i class="fa angle"></i></a>
      </div>
    </div>
  </div>
  <div id="collapseProject{{project.id}}" class="collapse border border-info rounded-bottom show">
    <div class="card-body d-flex flex-column">
      <table class="table table-borderless table-sm">
        <tr>
          <th scope="row" class="w-25"> Beschreibung </th>
          <td class="text-table-left"> {{project.lineBreakDescription}}</td>
        </tr>
        <tr>
          <th scope="row" class="w-25"> Rolle </th>
          <td> {{project.lineBreakRole}}</td>
        </tr>
        <tr>
          <th scope="row" class="w-25"> Technologie(n) </th>
          <td> {{project.lineBreakTechnology}}</td>
        </tr>
      </table>
      {{#if selectProject}}
        <div class="mt-auto">
          <a onclick={{action selectProject project}} role="button" class="edit-buttons"><i class="fa fa-pencil"></i> Bearbeiten</a>
        </div>
      {{/if}}
    </div>
  </div>
</div>
