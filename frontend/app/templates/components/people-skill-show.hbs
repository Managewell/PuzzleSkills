<div class="row">
  <div class="col pt-3 people-skill-skillname">
    {{#if showPersonName}}
      {{#link-to 'person.skills' peopleSkill.person}}
        <span data-dismiss="modal">{{peopleSkill.person.name}}</span>
      {{/link-to}}
    {{else}}
      <div class="people-skill-title">{{peopleSkill.skill.title}}</div>
    {{/if}}
  </div>
  <div class="col justify-content-center people-skill-level">
    <p class="description {{skillClass}}-level-title">{{levelName}}</p>
    {{ui-slider
    value=levelValue
    ticks='1,2,3,4,5'
    tooltip='hide'
    disabled=true
    min=1
    max=5
    immediateResponse=true
    action=(action 'hasChanged')
    }}
  </div>
  <div class="col people-skill-interest">
    <p class="description {{skillClass}}-interest-title">Interesse</p>
    {{icon-rating
    fillColor='#238BCA'
    readOnly=true
    value=peopleSkill.interest
    onClick=(action (mut newPeopleSkill.interest))
    }}
  </div>
  <div class="col pt-3 people-skill-certificate">
    {{#if peopleSkill.certificate}}
      <i class="fa fa-check-square" aria-hidden="true"></i>
    {{else}}
      <i class="far fa-square" aria-hidden="true"></i>
    {{/if}}
    <span class="description ml-2">Zertifikat</span>
  </div>
  <div class="col pt-3 people-skill-coreCompetence">
    {{#if peopleSkill.coreCompetence}}
      <i class="fa fa-check-square" aria-hidden="true"></i>
    {{else}}
      <i class="far fa-square" aria-hidden="true"></i>
    {{/if}}
    <span class="description ml-2">Kernkompetenz</span>
  </div>
  {{yield}}
</div>
<br>
