<div class="row">
  <div class="col people-skill-skillname">
    <strong>{{peopleSkill.skill.title}}</strong>
  </div>
  <div class="col justify-content-center people-skill-level">
    <p class="description level-interest-title">{{levelName}}</p>
    {{ui-slider
    value=levelValue
    ticks='1,2,3,4,5'
    ticksLabels='1,2,3,4,5'
    tooltip='hide'
    disabled=true
    min=1
    max=5
    immediateResponse=true
    }}
  </div>
  <div class="col people-skill-interest">
    <p class="description level-interest-title">Interesse</p>
    {{icon-rating
    fillColor='#238BCA'
    readOnly=true
    value=peopleSkill.interest
    onClick=(action (mut newPeopleSkill.interest))
    }}
  </div>
  <div class="col people-skill-certificate">
    {{#if peopleSkill.certificate}}
      <i class="fa fa-check-square" aria-hidden="true"></i>
    {{else}}
      <i class="fa fa-square-o" aria-hidden="true"></i>
    {{/if}}
    <span class="description ml-2">Zertifikat</span>
  </div>
  <div class="col people-skill-coreCompetence">
    {{#if peopleSkill.coreCompetence}}
      <i class="fa fa-check-square" aria-hidden="true"></i>
    {{else}}
      <i class="fa fa-square-o" aria-hidden="true"></i>
    {{/if}}
    <span class="description ml-2">Kernkompetenz</span>
  </div>
</div>
<br>
